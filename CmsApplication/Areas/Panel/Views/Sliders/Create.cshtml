@using CmsApplication.Enums
@model CmsApplication.Areas.Panel.Models.Slider

@{
    ViewData["Title"] = "Yeni Oluştur";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <form asp-action="Create" autocomplete="off" enctype="multipart/form-data">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="sliderFileInput">Dosya</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="sliderFileInput" name="sliderFile" lang="tr">
                                <label class="custom-file-label" for="sliderFileInput">Dosya Seç</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusEnum>()" class="form-control">
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}